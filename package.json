{
  "name": "@weather-api/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=dev nx run-many --target=serve --projects=weather,subscription,email,gateway",
    "start:weather": "NODE_ENV=dev nx serve weather",
    "start:subscription": "NODE_ENV=dev nx serve subscription",
    "start:email": "NODE_ENV=dev nx serve email",
    "start:gateway": "NODE_ENV=dev nx serve gateway",
    "build": "nx run-many --target=build --all",
    "build:weather": "nx build weather",
    "build:subscription": "nx build subscription",
    "build:email": "nx build email",
    "build:gateway": "nx build gateway",
    "lint": "yarn eslint libs/types && nx run-many --target=lint --all",
    "itest:subscription": "yarn setup:test:infrastructure && dotenv -e apps/subscription/.testing.env -- nx test subscription --configuration=integration && yarn teardown:test:infrastructure",
    "itest:gateway": "yarn setup:test:infrastructure && NODE_ENV=testing nx test gateway && yarn teardown:test:infrastructure",
    "test:weather": "dotenv -e apps/weather/.testing.env -- nx test weather",
    "setup:test:infrastructure": "docker compose -f apps/subscription/docker-compose.test.yml up -d && yarn migrate:test && yarn seed",
    "teardown:test:infrastructure": "docker compose -f apps/subscription/docker-compose.test.yml down",
    "migrate:test": "dotenv -e apps/subscription/.testing.env -- yarn prisma migrate deploy --schema=apps/subscription/prisma/schema.prisma",
    "seed": "dotenv -e apps/subscription/.testing.env -- yarn prisma db seed"
  },
  "prisma": {
    "seed": "ts-node apps/subscription/src/database/seed.ts"
  },
  "private": true,
  "dependencies": {
    "@grpc/grpc-js": "^1.13.3",
    "@grpc/proto-loader": "^0.7.15",
    "@nestjs/common": "^10.0.2",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.2",
    "@nestjs/microservices": "^11.1.1",
    "@nestjs/platform-express": "^10.0.2",
    "axios": "^1.6.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^11.1.3",
    "@nx/eslint": "21.0.3",
    "@nx/eslint-plugin": "21.0.3",
    "@nx/jest": "21.0.3",
    "@nx/js": "21.0.3",
    "@nx/nest": "21.0.3",
    "@nx/node": "21.0.3",
    "@nx/web": "21.0.3",
    "@nx/webpack": "21.0.3",
    "@nx/workspace": "21.0.3",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/jest": "^29.5.12",
    "@types/node": "20",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.4.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0",
    "jest-fixed-jsdom": "^0.0.9",
    "nx": "21.0.3",
    "prettier": "^2.6.2",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "tslib": "^2.3.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.19.0",
    "webpack-cli": "^5.1.4"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ]
}
