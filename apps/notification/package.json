{
  "name": "@weather-api/notification",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build"
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@weather-api/notification:build",
          "runBuildTargetDependencies": false
        }
      },
      "test": {
        "executor": "@nx/jest:jest",
        "defaultConfiguration": "unit",
        "options": {
          "jestConfig": "jest.config.ts"
        },
        "configurations": {
          "integration": {
            "testMatch": [
              "<rootDir>/apps/notification/**/*.ispec.ts"
            ]
          },
          "unit": {
            "testMatch": [
              "<rootDir>/apps/notification/**/*.spec.ts"
            ]
          }
        }
      }
    }
  },
  "dependencies": {
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.8"
  }
}
