{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": [
      "node"
    ],
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2021"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "eslint.config.mjs",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.ispec.ts"
  ],
  "references": [
    {
      "path": "../../libs/utils/tsconfig.lib.json"
    }
  ]
}
