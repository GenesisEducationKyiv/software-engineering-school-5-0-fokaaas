{
  "name": "@weather-api/weather",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build"
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@weather-api/weather:build",
          "runBuildTargetDependencies": false
        }
      },
      "test": {
        "executor": "@nx/jest:jest",
        "defaultConfiguration": "unit",
        "configurations": {
          "integration": {
            "jestConfig": "jest.integration.config.ts",
            "passWithNoTests": true
          },
          "unit": {
            "jestConfig": "jest.unit.config.ts",
            "passWithNoTests": true
          }
        }
      }
    }
  },
  "devDependencies": {
    "msw": "^2.10.2"
  }
}
