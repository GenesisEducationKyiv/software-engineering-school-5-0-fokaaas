{
  "name": "@weather-api/weather",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build"
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@weather-api/weather:build",
          "runBuildTargetDependencies": false
        }
      },
      "test": {
        "executor": "@nx/jest:jest",
        "defaultConfiguration": "unit",
        "options": {
          "jestConfig": "jest.config.ts"
        },
        "configurations": {
          "integration": {
            "testMatch": ["<rootDir>/apps/weather/**/*.ispec.ts"]
          },
          "unit": {
            "testMatch": ["<rootDir>/apps/weather/**/*.spec.ts"],
            "setupFilesAfterEnv": ["<rootDir>/apps/weather/src/common/utils/test/setup-msw.ts"]
          }
        }
      }
    }
  },
  "devDependencies": {
    "msw": "^2.10.2"
  }
}
