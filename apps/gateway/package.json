{
  "name": "@weather-api/gateway",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build"
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "gateway:build",
          "runBuildTargetDependencies": false
        }
      }
    }
  },
  "dependencies": {
    "@nestjs/schedule": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2"
  }
}
