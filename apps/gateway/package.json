{
  "name": "@weather-api/gateway",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build"
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@weather-api/gateway:build",
          "runBuildTargetDependencies": false
        }
      },
      "test": {
        "executor": "@nx/jest:jest",
        "defaultConfiguration": "unit",
        "options": {
          "jestConfig": "jest.config.ts"
        },
        "configurations": {
          "integration": {
            "testMatch": ["<rootDir>/apps/gateway/**/*.ispec.ts"]
          },
          "unit": {
            "testMatch": ["<rootDir>/apps/gateway/**/*.spec.ts"]
          }
        }
      }
    }
  },
  "dependencies": {
    "@nestjs/schedule": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2"
  },
  "devDependencies": {
    "@types/supertest": "^6.0.3",
    "supertest": "^7.1.1"
  }
}
